@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
	var siteLogo = Model.Value<IPublishedContent>("logo", fallback: Fallback.ToAncestors);
	bool hasSiteLogo = siteLogo != null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@Model.Value("title", fallback: Fallback.ToAncestors)</title>
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid px-3">
				<!-- Logo -->
				<a class="navbar-brand" style="display: flex; justify-content: center; align-items: center;" href="/">
					<img src="@siteLogo?.Url()" alt="Logo" height="25" />
				</a>

				<!-- Mobile Toggle Button -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Collapsible Menu -->
				<div class="collapse navbar-collapse" id="navbarContent">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" href="/">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Menu1">Menu1</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/Menu2">Menu2</a>
						</li>
					</ul>

					<!-- Sign In/Sign Up Buttons -->
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" href="/SignIn">Sign In</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/SignUp">Sign Up</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>


	<div class="container">
		@RenderBody()
	</div>


	@await RenderSectionAsync("Scripts", false)

	<!-- Bootstrap Bundle with Popper.js -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>